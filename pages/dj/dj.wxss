/* pages/dj/dj.wxss */
.background{
height: 500rpx;
background-size: cover;
}

.info{
  position: relative;
  top: -150rpx;
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  color: #fff
}

.sub{
  font-size: 26rpx;
}
.right{
  display: flex;
  background: #f45;
  padding:10rpx 20rpx;
  border-radius: 20rpx
}
.icon{
  margin:  5rpx
}
.playlist{
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  position: relative;
  top: -100rpx
}
.title{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.left1{
  display: flex;
  position: relative;
  top:10rpx;
}
.a-img{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}
.playAll{
  font-weight: bold
}
.sum{
  font-size: 28rpx;
  color: #666;
  margin-top: 6rpx;
}

.right1{
  font-size: 26rpx;
  color: #fff;
  background: #FF4444;
  border-radius: 30rpx;
  padding: 15rpx
}
.list1{
  width: 90%;
  margin: auto
}
.b-list{
  display: flex;
  margin: 10rpx 0;
  justify-content: space-between
}
.left2{
  display: flex;
  width: 75%
}
.index{
  color: #666;
  margin-right: 10rpx
}
.bottom{
  display: flex;
  font-size: 26rpx;
  color: #999
}
.only{
  color: red;
  font-size: 20rpx;
  border:2rpx solid red;
  border-radius: 8rpx;
  padding: 0 8rpx;
  margin: 8rpx
}
.songName,.names{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.right2{
  display: flex
}
.p-img{
  display: block;
  width: 32rpx;
  height: 32rpx
}
.ar{
  margin: 0 10rpx
}
